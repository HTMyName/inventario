{% extends 'base.html.twig' %}

{% block title %}
    Añadir Gastos
{% endblock %}

{% block page_name %}
    Añadir Gastos
{% endblock %}

{% block main_content %}
    <div class="card card-primary container-fluid">
        <div class="card-body">
            {{ form_start(form, { attr: {class: 'submit-p-form'} }) }}
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-control">Ganancias:
                        <span class="float-right">
                            {{ system.ganancia }}
                        </span>
                    </label>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control mb-sm-2" name="gastos_input" placeholder="Gastos"
                           required autocomplete="off">
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control mb-sm-2" name="nota_input" placeholder="Nota"
                           required autocomplete="off">
                </div>
                <div class="col-md-3">
                    {{ form_row(form.submit, {attr: {class: 'form-control btn btn-primary submit-p-btn'}}) }}
                </div>
            </div>
            {{ form_end(form) }}

        </div>
        <!-- /.card-body -->
    </div>
{% endblock %}




